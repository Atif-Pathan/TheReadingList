<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="container">
      <a href="/dashboard" class="back-link">‚Üê Back to Overview</a>

      <div class="book-detail-layout">
        <div class="detail-left-col">
          <div class="book-cover">
            <img
              src="<%= book.cover_image_url %>"
              alt="Cover of <%= book.title %>"
            />
          </div>
          <div class="section">
            <h3>Summary</h3>
            <p><%= book.summary || 'No summary has been added yet.' %></p>
          </div>
        </div>

        <div class="book-info">
          <span
            class="pill status-<%= book.category_name.toLowerCase().replace(/\s+/g,'-') %>"
          >
            <%= book.category_name %>
          </span>

          <h1><%= book.title %></h1>
          <h2 class="subtitle">by <%= book.author %></h2>

          <% if (book.rating != null) { %>
          <div class="section">
            <h3>My Rating: <%= book.rating %> / 10</h3>
            <div class="rating-bar">
              <span style="width: <%= book.rating * 10 + '%' %>"></span>
            </div>
          </div>
          <% } %>

          <div class="section">
            <h3>Genre</h3>
            <p>
              <%= book.genre ? book.genre.split(',').map(g=>g.trim()).join(', ')
              : 'Not specified' %>
            </p>
          </div>

          <div class="section">
            <h3>My Notes</h3>
            <p><%= book.review || 'No notes yet.' %></p>
          </div>

          <div class="action-buttons">
            <a href="/books/<%= book.id %>/edit" class="btn btn-primary"
              >Edit Book</a
            >
            <form
              action="/books/<%= book.id %>/delete"
              method="POST"
              style="display: inline"
            >
              <button type="submit" class="btn btn-danger">Delete Book</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
