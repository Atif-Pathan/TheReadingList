<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="container">
      <a href="/dashboard" class="back-link">&larr; Back to Dashboard</a>

      <div class="form-container">
        <h1><%= title %></h1>

        <!-- Display validation errors if they exist -->
        <% if (errors.length > 0) { %>
        <ul class="error-list">
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }); %>
        </ul>
        <% } %>

        <form action="/books/new" method="POST">
          <div class="form-group">
            <label for="title">Title*</label>
            <input
              type="text"
              id="title"
              name="title"
              value="<%= typeof book !== 'undefined' ? book.title : '' %>"
              required
            />
          </div>

          <div class="form-group">
            <label for="author">Author*</label>
            <input
              type="text"
              id="author"
              name="author"
              value="<%= typeof book !== 'undefined' ? book.author : '' %>"
              required
            />
          </div>

          <div class="form-group">
            <label for="category_id">Status*</label>
            <select id="category_id" name="category_id" required>
              <option value="">-- Please select a status --</option>
              <% categories.forEach(category => { %>
              <option
                value="<%= category.id %>"
                <%= (typeof book !== 'undefined' && book.category_id ==
                category.id) ? 'selected' : '' %>
              >
                <%= category.name %>
              </option>
              <% }); %>
            </select>
          </div>

          <div class="form-group">
            <label for="cover_image_url">Cover Image URL</label>
            <input
              type="url"
              id="cover_image_url"
              name="cover_image_url"
              placeholder="https://..."
              value="<%= typeof book !== 'undefined' ? book.cover_image_url : '' %>"
            />
          </div>

          <div class="form-group">
            <label for="genre">Genre</label>
            <input
              type="text"
              id="genre"
              name="genre"
              value="<%= typeof book !== 'undefined' ? book.genre : '' %>"
            />
          </div>

          <div class="form-group">
            <label for="rating">Rating (0-10, for "Read" books)</label>
            <input
              type="number"
              id="rating"
              name="rating"
              min="0"
              max="10"
              value="<%= typeof book !== 'undefined' ? book.rating : '' %>"
            />
          </div>

          <div class="form-group">
            <label for="review">Review & Notes</label>
            <textarea id="review" name="review" rows="6">
<%= typeof book !== 'undefined' ? book.review : '' %></textarea
            >
          </div>

          <button type="submit" class="btn btn-primary">Save Book</button>
        </form>
      </div>
    </div>
  </body>
</html>