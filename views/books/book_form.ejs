<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head', { title: title }) %>
  </head>
  <body>
    <div class="container">
      <div class="back-links">
        <a href="/dashboard" class="back-link">&larr; Back to Dashboard</a>
        <% if (categoryBackLink) { %>
        <a href="<%= categoryBackLink.url %>" class="back-link">
          ← <%= categoryBackLink.text %>
        </a>
        <% } %>
      </div>
      <div class="form-container">
        <h1><%= title %></h1>

        <!-- Display validation errors -->
        <% if (locals.errors && errors.length > 0) { %>
        <ul class="error-list">
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }); %>
        </ul>
        <% } %>

        <!-- DYNAMIC FORM: Action points to /new or /:id/edit -->
        <form
          action="<%= typeof book.id !== 'undefined' ? '/books/' + book.id + '/edit' : '/books/new' %>"
          method="POST"
          class="book-form"
        >
          <div class="form-grid">
            <div class="form-group">
              <label for="title">Title*</label>
              <input
                type="text"
                id="title"
                name="title"
                value="<%= book.title || '' %>"
                required
              />
            </div>
            <div class="form-group">
              <label for="author">Author*</label>
              <input
                type="text"
                id="author"
                name="author"
                value="<%= book.author || '' %>"
                required
              />
            </div>
            <div class="form-group">
              <label for="category_id">Status*</label>
              <select id="category_id" name="category_id" required>
                <option value="">-- Select Status --</option>
                <% categories.forEach(category => { %>
                <option
                  value="<%= category.id %>"
                  <%= (String(book.category_id) === String(category.id)) ? 'selected' : '' %>
                >
                  <%= category.name %>
                </option>
                <% }); %>
              </select>
            </div>
            <div class="form-group">
              <label for="genre">Genre(s) <em>- Split genres via commas.</em></label>
              <input
                type="text"
                id="genre"
                name="genre"
                placeholder="e.g., Sci-Fi, Fantasy"
                value="<%= book.genre || '' %>"
              />
            </div>
            <div class="form-group">
              <label for="rating">Rating (0–10)</label>
              <input
                type="number"
                id="rating"
                name="rating"
                min="0"
                max="10"
                value="<%= (book.rating !== null && book.rating !== undefined) ? book.rating : '' %>"
              />
            </div>
            <div class="form-group">
              <label for="cover_image_url">Cover Image URL</label>
              <input
                type="url"
                id="cover_image_url"
                name="cover_image_url"
                placeholder="https://example.com/cover.jpg"
                value="<%= book.cover_image_url || '' %>"
              />
            </div>
            <div class="form-group form-summary">
              <label for="summary">Summary</label>
              <textarea
                id="summary"
                name="summary"
                placeholder="A short synopsis of the book..."
              ><%= book.summary || '' %></textarea>
            </div>
            <div class="form-group form-password">
              <label for="password">Admin Password*</label>
              <input
                type="password"
                id="password"
                name="password"
                required
                placeholder="Enter password to save changes"
              />
            </div>
            <div class="form-group notes">
              <label for="review">Review & Notes</label>
              <textarea
                id="review"
                name="review"
                placeholder="Your thoughts on the book..."
              ><%= book.review || '' %></textarea>
            </div>

          </div>
          <div class="submit-div">
            <button type="submit" class="btn btn-primary">Save Book</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>