<!-- views/partials/category_quick_form.ejs -->
<div id="category-form-wrapper" class="form-wrapper hidden">
  <div class="form-container">
    <div class="form-header">
      <h2 id="category-form-title">New Category</h2>
    </div>
    <form
      id="category-form"
      action="/categories/new"
      method="POST"
      class="quick-category-form"
    >
      <div class="form-group">
        <label for="category-name">Category Name*</label>
        <input type="text" id="category-name" name="name" required />
      </div>
      <div class="form-group">
        <label for="category-description">Description</label>
        <input
          type="text"
          id="category-description"
          name="description"
          placeholder="Optional"
        />
      </div>
      <div class="form-group">
        <label for="category-password">Admin Password*</label>
        <input
          type="password"
          id="category-password"
          name="password"
          required
        />
      </div>
      <button id="category-form-submit" type="submit" class="btn btn-primary">
        Create
      </button>
    </form>
    <button id="cancel-category-form" class="btn-close" aria-label="Close form">
      &times;
    </button>
  </div>
</div>
